@model DgrosStore.Models.Discount


<div class="row">
    <h2 class="ml-2">Descuento</h2>

    <div class="col-lg-4 d-flex justify-content-lg-end">
        @Html.ActionLink(" ", "Index", "Discount", null, new { @class = "btn btn-info my-2 fa fa-times" })
    </div>
</div>


@using (Html.BeginForm("Save", "Discount"))
{
    <div class="form-group">
        <label>Nombre</label>
        @Html.TextBoxFor(m => m.DiscountName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DiscountName)
    </div>
    <div class="form-group">
        <label>Valor del descuento</label>
        @Html.TextBoxFor(m => m.Discountvalue, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Discountvalue)
    </div>
    <div class="form-group">
        <label>Tipo de descuento</label>
        @Html.TextBoxFor(m => m.DiscountType, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DiscountType)
    </div>
    @Html.HiddenFor(m => m.DiscountId);
    @Html.AntiForgeryToken()
    <div>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
}


@section scripts
    {
    @Scripts.Render("~/bundles/jqueryval")
}

