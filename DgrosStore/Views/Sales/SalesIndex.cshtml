@model DgrosStore.Models.viewModels.SalesViewModel


<h2></h2>

<div class="row">

    <div id="salesProductTableDiv" class="col col-lg-8 col-sm-12 col-md-8">

        <table id="salesProductTable" class="table table-bordered productSalesTable text-lg-center">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Cant</th>
                    <th scope="col">Desc</th>
                    <th scope="col">Precio</th>
                    <th scope="col">SubTotal</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody id="tableProduct"></tbody>
        </table>
    </div>

    <div id="salesTableFormDiv" class=" col col-lg-4 col-sm-12 col-md-4">
        <form method="post">
            <label for="Client"><strong>Cliente</strong></label>
            <div class="form-group row px-3">
                <div id="clientDiv" class="input-group inputDiv">
                    <div class="input-group-prepend">
                        <button type="button" id="searchClient" class="input-group-text"><i id="searchClientIcon" class="fa fa-search"></i></button>
                    </div>
                    <input type="text" id="clientInput">
                    @Html.DropDownListFor(m => m.clients, new SelectList(Model.clients, "ClientId", "Name"), "seleccione un cliente",
                           new { @class = "form-control", @id = "clientSelect" })
                </div>
            </div>

            <label for="Product"><strong>Producto</strong></label>
            <div class="form-group row px-3">
                <div id="productDiv" class="input-group inputDiv">
                    <div class="input-group-prepend">
                        <button type="button" id="searchProduct" class="input-group-text"><i id="searchProductIcon" class="fa fa-search"></i></button>
                    </div>
                    <input type="text" id="productInput">
                    @Html.DropDownListFor(m => m.products, new SelectList(Model.products, "ProductId", "Name"),"seleccione un producto",
                           new { @class = "form-control", @id = "productSelect" })
                    @Html.ValidationMessageFor(m => m.products)
                </div>
            </div>


            <div class="form-group">
                <button type="button" id="addProduct" class="btn btn-success btn-block btnSize">Agregar</button>
            </div>
            <div class="form-group">
                <label><strong>Metodo de pago</strong></label>
                @Html.EnumDropDownListFor(m => m.paymentMethod, "selecciona un metodo de pago", new { @class = "form-control", @id = "paymentMethod", @name = "paymentMethod" })
                @Html.ValidationMessageFor(m => m.paymentMethod)
            </div>
            <div class="form-group">
                <label><strong>Comentario</strong></label>
                @Html.TextAreaFor(m => m.commentary, 4, 50, new { @class = "form-control", @id = "commentary", @name = "commentary" })
            </div>
            <div class="form-group">
                <button id="salesButton" type="button" class="btn btn-primary btnSize">Finalizar venta</button>
            </div>
        </form>

    </div>
    <div class="totalDiv col col-lg-8 col-sm-12 col-md-8 my-3 ">
        <strong class="totalPrice">Total: $<span id="total">0</span></strong>
    </div>

</div>


@section scripts {

    <script src="~/Scripts/SalesScript.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}