@model IEnumerable<DgrosStore.Models.Category>
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <h2 class="col-lg-6">Categorias</h2>
    <div class="col-lg-6 d-flex justify-content-lg-end">
        @Html.ActionLink(" ", "Create", "Category", null, new { @class = "btn btn-success btn-xs m-2 fa fa-plus" })
        @*@@Html.ActionLink(" ", "Index", "Product", null, new { @class = "btn btn-info my-2 fa fa-times" })*@
    </div>
</div>
@if (Model.Count() > 0)
{
    var cont = 1;
    <table class="table table-hover table-responsive-md">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var category in Model)
            {

                <tr>
                    <th scope="row">@cont</th>
                    <td>@Html.ActionLink(@category.Name, "ProductByCategory", "Product", new { category = category.Name }, new { @style = "color:black" })</td>
                    <td>
                        @Html.ActionLink(" ","edit","Category",new { id = category.CategoryId},new { @class = "btn btn-warning btn-xs fa fa-edit" })
                        <button type="button" class="btn btn-danger btn-xs"><span class="fa fa-remove"></span></button>
                    </td>
                </tr>
                { cont++; }
            }
        </tbody>
    </table>
}
else
{
    <div class="jumbotron">
        <h1 class="text-center">No hay categorias disponibles</h1>
    </div>
}